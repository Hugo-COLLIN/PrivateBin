<?xml version="1.0"?>
<ruleset name="Custom">
  <description>Custom coding standard.</description>

  <!-- Use the PSR-12 coding standard -->
  <rule ref="PSR12"/>

  <!-- Customize the coding standard -->
  <rule ref="Generic.WhiteSpace.DisallowTabIndent">
    <severity>0</severity>
  </rule>

  <!-- Specify the files and directories to be checked -->
  <file>.</file>
  <exclude-pattern>*/vendor/*</exclude-pattern>
  <exclude-pattern>*/node_modules/*</exclude-pattern>

  <!-- Specify the file extensions to be checked -->
  <arg name="extensions" value="php"/>
</ruleset>
